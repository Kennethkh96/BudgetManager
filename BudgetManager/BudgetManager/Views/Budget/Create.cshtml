                @Html.DropDownListFor(model => model.FK_IntervalTitle, new SelectList(ViewBag.Intervals, "IntervalTitle", "IntervalTitle"), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.FK_IntervalTitle, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
